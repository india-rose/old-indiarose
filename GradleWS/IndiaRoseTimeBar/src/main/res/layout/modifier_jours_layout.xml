<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/couleur_principale"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/modifier_jours_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modifier_bouton_retour"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="@string/modifier_jours_description"
        android:layout_marginTop="10dip" 
        android:layout_marginLeft="10dip" 
        android:layout_marginRight="10dip" 
        />

    <LinearLayout
        android:id="@+id/modifier_jours_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/modifier_jours_description"
        android:layout_above="@+id/modifier_jours_valider"
        android:orientation="vertical"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:paddingTop="30dip" />

    <Button
        android:id="@+id/modifier_bouton_retour"
        style="@style/bouton_retour" 
        android:visibility="gone"/>

    <Button
        android:id="@+id/modifier_jours_valider"
        style="@style/calendar_bouton_valider"
        android:layout_alignParentBottom="false"
        android:layout_above="@+id/modifier_jours_creer_recurrences" >
    </Button>
    
    <Button
        android:id="@+id/modifier_jours_creer_recurrences"

        style="@style/accueil_bouton_consulter"
        android:text="@string/creer_recurrences"
        android:layout_alignParentBottom="true"
         >
    </Button>

</RelativeLayout>
