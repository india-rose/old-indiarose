<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="2dp" >

        <TextView
            android:id="@+id/label_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="15dip"
            android:text="Seconde  "
            android:textColor="@color/bleu_fonce"
            android:textSize="19dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical" >

            <SeekBar
                android:id="@+id/seekbar_second"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/value_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/seekbar_second"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/seekbar_second"
                android:text="0"
                android:textColor="@color/bleu_fonce"
                android:textSize="17dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/label_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="15dip"
            android:text="Minute  "
            android:textColor="@color/bleu_fonce"
            android:textSize="19dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical" >

            <SeekBar
                android:id="@+id/seekbar_minute"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/value_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/seekbar_minute"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/seekbar_minute"
                android:text="0"
                android:textColor="@color/bleu_fonce"
                android:textSize="17dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/label_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="15dip"
            android:text="Heure  "
            android:textColor="@color/bleu_fonce"
            android:textSize="19dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical" >

            <SeekBar
                android:id="@+id/seekbar_hour"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/value_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/seekbar_hour"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/seekbar_hour"
                android:text="0"
                android:textColor="@color/bleu_fonce"
                android:textSize="17dp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>